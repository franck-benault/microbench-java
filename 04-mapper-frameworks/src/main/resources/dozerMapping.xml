<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
  <configuration>
    <stop-on-errors>true</stop-on-errors>
    <date-format>MM/dd/yyyy HH:mm</date-format>
    <wildcard>true</wildcard>
  </configuration>

  <mapping wildcard="false" map-null="false" map-id="order">
    <class-a>net.franckbenault.microbench.source.Order</class-a>
    <class-b>net.franckbenault.microbench.destination.OrderDTO</class-b>
      <field>
        <a>customer.name.firstName</a>
        <b>customerFirstName</b>
      </field>
      <field>
        <a>customer.name.lastName</a>
        <b>customerLastName</b>
      </field>
      <field>
        <a>billingAddress.city</a>
        <b>billingCity</b>
      </field>
      <field>
        <a>billingAddress.street</a>
        <b>billingStreet</b>
      </field>
  </mapping> 

            
                   
</mappings>  